<%= form_for [:admin, @inquiry_question, @inquiry_answer] do |f| %>
  <%= error_messages_for(f.object) %>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :text %>
      <%= f.text_field :text, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-1">
      <%= f.label :position %>
      <%= f.text_field :position, required: true, class: "form-control" %>
    </div>

    <div class="form-group col-md-1">
      <%= f.label :active %>
      <%= f.check_box :active, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.submit class: 'form-control btn-primary' %>
    </div>
  </div>
<% end %>
