<div class="row">
  <div class="col-10">
    <h1 class="h4">Inquérito</h1>
  </div>

  <div class="col-2">
    <%= link_to "Criar pergunta", new_admin_inquiry_question_path, class: 'btn btn-primary btn-block' %>
  </div>
</div>

<table class="table table-bordered table-hover table-sm mt-3">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Pergunta</th>
    <th scope="col">Formato</th>
    <th scope="col">Posição</th>
    <th scope="col">Ativo</th>
  </tr>
  </thead>
  <tbody>
  <% @inquiry_questions.each do |inquiry_question| -%>
    <tr data-cy="inquiry_question" class="<%= "table-dark" unless inquiry_question.active %>">
      <td>
        <%= link_to inquiry_question.id, [:admin, inquiry_question] %>
      </td>
      <th scope="row">
        <%= inquiry_question.text %>
      </th>
      <td>
        <%= inquiry_question.form_type %>
      </td>
      <td>
        <%= inquiry_question.position %>
      </td>
      <td>
        <%= inquiry_question.active ? "Sim" : "Não" %>
      </td>
    </tr>
  <% end -%>
  </tbody>
</table>

<div>
  <%= paginate @inquiry_questions %>
</div>
