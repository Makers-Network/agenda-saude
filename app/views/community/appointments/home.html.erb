<% if @appointment.present? %>
  <%= render "home_has_appointment" %>

<% else %>
  <div class="row">
    <div class="col mb-4 text-center">
      <h4 data-cy="noAppointmentText">Você não possui vacinação agendada.</h4>
    </div>
  </div>

  <% if current_patient.can_schedule? -%>
    <%= render "home_can_schedule" %>

  <% else -%>
    <%= render "home_cannot_schedule" %>
  <% end -%>
<% end %>

<% if @doses.any? -%>
  <div class="container mt-3">
    <div class="card">
      <h4 class="card-header" data-cy="vaccinatedPatientText">
        Vacinas recebidas
      </h4>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="row">
            <%= render "community/doses/doses", doses: @doses %>
          </div>
        </li>
      </ul>
    </div>
  </div>
<% end -%>
