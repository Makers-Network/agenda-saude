      <div class="col">
        <strong>Vacina:</strong> <%= dose.vaccine.name %> (<i><%= dose.vaccine.formal_name %></i>)
      </div>
    </div>
    <div class="row">
      <div class="col">
        <strong>Unidade:</strong> <%= dose.appointment.ubs.name %>
      </div>
    </div>
    <div class="row">
