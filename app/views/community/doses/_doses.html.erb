    <div class="row">
      <div class="col">
        <h4>
          <%= dose.sequence_number %><sup>a</sup> dose
        </h4>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <strong>Data:</strong> <%= l dose.created_at, format: :human %>
