<div class="container">
  <div class="alert alert-info">
    O CPF <%= ApplicationHelper.humanize_cpf(@patient.cpf) %> ainda nÃ£o foi cadastrado.
    Complete seu cadastro abaixo para acessar o agendamento da vacina.
  </div>

  <h2 data-cy="signUpText">Cadastro</h2>

  <%= form_for @patient, url: community_patient_path, method: :post do |f| -%>
    <%= render "form", f: f %>

    <div class="form-row">
      <div class="form-group col-md-12">
        <%= f.submit "Cadastrar",
                     class: "btn btn-primary btn-block pull-right",
                     data: { cy: "patientSubmitButton" } %>
      </div>
    </div>
  <% end -%>
</div>
