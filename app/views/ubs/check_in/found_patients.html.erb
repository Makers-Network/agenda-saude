<% if @appointments_patients.present? %>
  <% @appointments_patients.each do |patient| %>
    <% if patient[:appointment_start] <= 30.minutes.from_now %>
    <a href=<%= ubs_patient_details_path(patient_id: patient[:id]) %>>
      <p><%= patient[:name] %> - <%= patient[:cpf] %> - <%= patient[:appointment_day] %> - <%= patient[:appointment_hour] %></p>
    <% else %>
      <p><%= patient[:name] %> - <%= patient[:cpf] %> - <%= patient[:appointment_day] %> - <%= patient[:appointment_hour] %></p>
    <% end %>
    </a>
  <% end %>
<% else %>
